@model DemoMVC.Models.Memorandum
@{
    ViewData["Title"] = "編輯備忘錄";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <!-- 頁面標題 -->
            <div class="mb-4">
                <h1 class="display-5">
                    <i class="bi bi-pencil"></i> 編輯備忘錄
                </h1>
            </div>

            <!-- 表單 -->
            <form asp-action="Edit" method="post" id="memorandumForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedAt" />
                <input type="hidden" asp-for="IsDeleted" />
                
                <div class="card">
                    <div class="card-body">
                        <!-- 標題 -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">標題 <span class="text-danger">*</span></label>
                            <input asp-for="Title" 
                                   class="form-control form-control-lg" 
                                   placeholder="輸入備忘錄標題..."
                                   maxlength="200"
                                   required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                            <div class="form-text">
                                <span id="titleCount">@(Model?.Title?.Length ?? 0)</span> / 200 字元
                            </div>
                        </div>

                        <!-- 內容 -->
                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">
                                內容 <span class="text-danger">*</span>
                                <span class="badge bg-info ms-2">支援 Markdown</span>
                            </label>
                            
                            <!-- Markdown 工具列 -->
                            <div class="btn-toolbar mb-2" role="toolbar">
                                <div class="btn-group btn-group-sm me-2" role="group">
                                    <button type="button" class="btn btn-outline-secondary" data-markdown="bold" title="粗體">
                                        <i class="bi bi-type-bold"></i>
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary" data-markdown="italic" title="斜體">
                                        <i class="bi bi-type-italic"></i>
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary" data-markdown="heading" title="標題">
                                        <i class="bi bi-type-h1"></i>
                                    </button>
                                </div>
                                <div class="btn-group btn-group-sm me-2" role="group">
                                    <button type="button" class="btn btn-outline-secondary" data-markdown="list" title="列表">
                                        <i class="bi bi-list-ul"></i>
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary" data-markdown="link" title="連結">
                                        <i class="bi bi-link-45deg"></i>
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary" data-markdown="code" title="程式碼">
                                        <i class="bi bi-code-slash"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <textarea asp-for="Content" 
                                              class="form-control font-monospace" 
                                              rows="15"
                                              id="contentEditor"
                                              placeholder="輸入備忘錄內容（支援 Markdown 語法）..."
                                              maxlength="10000"
                                              required></textarea>
                                    <span asp-validation-for="Content" class="text-danger"></span>
                                    <div class="form-text">
                                        <span id="contentCount">@(Model?.Content?.Length ?? 0)</span> / 10000 字元
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card">
                                        <div class="card-header bg-light">
                                            <small>即時預覽</small>
                                        </div>
                                        <div class="card-body markdown-preview" id="markdownPreview" style="min-height: 350px;">
                                            <!-- 預覽內容將由 JavaScript 產生 -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- 標籤 -->
                        <div class="mb-3">
                            <label class="form-label">標籤</label>
                            <div class="input-group mb-2">
                                <input type="text" 
                                       id="tagInput" 
                                       class="form-control" 
                                       placeholder="輸入標籤後按 Enter..."
                                       maxlength="50"
                                       list="availableTags" />
                                <datalist id="availableTags">
                                    @foreach (var tag in ViewBag.AvailableTags as List<string> ?? new List<string>())
                                    {
                                        <option value="@tag"></option>
                                    }
                                </datalist>
                                <button type="button" class="btn btn-outline-secondary" id="addTagBtn">
                                    <i class="bi bi-plus"></i> 新增
                                </button>
                            </div>
                            <div id="tagList" class="mb-2">
                                @if (Model?.Tags != null)
                                {
                                    foreach (var tag in Model.Tags)
                                    {
                                        <span class="badge bg-secondary me-1 tag-item">
                                            @tag
                                            <button type="button" class="btn-close btn-close-white btn-sm ms-1 remove-tag" data-tag="@tag"></button>
                                        </span>
                                    }
                                }
                            </div>
                            <input type="hidden" asp-for="Tags" id="tagsHidden" value="@(Model?.Tags != null ? string.Join(",", Model.Tags) : "")" />
                        </div>

                        <!-- 顏色標記 -->
                        <div class="mb-3">
                            <label asp-for="Color" class="form-label">顏色標記</label>
                            <div class="d-flex gap-2 align-items-center">
                                <input asp-for="Color" 
                                       type="color" 
                                       class="form-control form-control-color" 
                                       value="@(Model?.Color ?? "#007bff")"
                                       style="width: 80px;" />
                                <span class="form-text">選擇卡片的顏色標記（可選）</span>
                            </div>
                        </div>

                        <!-- 釘選選項 -->
                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsPinned" 
                                       class="form-check-input" 
                                       type="checkbox" />
                                <label asp-for="IsPinned" class="form-check-label">
                                    釘選此備忘錄到列表最前面
                                </label>
                            </div>
                        </div>

                        <!-- 資訊顯示 -->
                        <div class="alert alert-info">
                            <small>
                                <i class="bi bi-info-circle"></i>
                                建立時間: @Model?.CreatedAt.ToString("yyyy/MM/dd HH:mm")
                                @if (Model?.UpdatedAt != null && Model.UpdatedAt != Model.CreatedAt)
                                {
                                    <span class="ms-3">最後更新: @Model.UpdatedAt.ToString("yyyy/MM/dd HH:mm")</span>
                                }
                            </small>
                        </div>
                    </div>

                    <!-- 按鈕區域 -->
                    <div class="card-footer bg-light">
                        <div class="d-flex gap-2 justify-content-end">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> 取消
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> 儲存變更
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/memorandum.css">
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script src="~/js/memorandum.js"></script>
    <script>
        // 初始化編輯器
        if (typeof MemorandumEditor !== 'undefined') {
            MemorandumEditor.init();
        }
    </script>
}
