@{
    ViewData["Title"] = "Index2 Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Index2</h1>
    <p class="lead">這是第二個首頁，展示 ASP.NET Core MVC 的多頁面功能。</p>
    
    <!-- 功能展示區域 -->
    <section class="features-container mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="feature-card p-4 border rounded shadow-sm">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-code fa-3x text-primary"></i>
                        </div>
                        <h3 class="h5">現代化開發</h3>
                        <p class="text-muted">使用 ASP.NET Core 8.0 和最新的 C# 語言特性進行開發。</p>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="feature-card p-4 border rounded shadow-sm">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-mobile-alt fa-3x text-success"></i>
                        </div>
                        <h3 class="h5">響應式設計</h3>
                        <p class="text-muted">完美適配各種裝置，從手機到桌機都有絕佳的使用體驗。</p>
                    </div>
                </div>
                
                <div class="col-md-4 mb-4">
                    <div class="feature-card p-4 border rounded shadow-sm">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-rocket fa-3x text-warning"></i>
                        </div>
                        <h3 class="h5">高效能</h3>
                        <p class="text-muted">優化的程式碼和先進的快取策略，確保最佳的載入速度。</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- 行動呼籲區域 -->
    <section class="cta-section mt-5 py-5 bg-light rounded">
        <div class="container">
            <h2 class="h3 mb-3">開始您的開發之旅</h2>
            <p class="mb-4">探索更多 ASP.NET Core 的強大功能，建構現代化的 Web 應用程式。</p>
            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                    <i class="fas fa-home me-2"></i>回到首頁
                </a>
                <a href="@Url.Action("Privacy", "Home")" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-shield-alt me-2"></i>隱私政策
                </a>
                <a href="https://learn.microsoft.com/aspnet/core" target="_blank" class="btn btn-outline-info btn-lg">
                    <i class="fas fa-external-link-alt me-2"></i>學習更多
                </a>
            </div>
        </div>
    </section>
    
    <!-- 統計資訊區域 -->
    <section class="stats-section mt-5">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3 col-6 mb-3">
                    <div class="stat-item">
                        <h3 class="display-6 text-primary fw-bold" id="stat-users">0</h3>
                        <p class="text-muted mb-0">活躍使用者</p>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-3">
                    <div class="stat-item">
                        <h3 class="display-6 text-success fw-bold" id="stat-projects">0</h3>
                        <p class="text-muted mb-0">專案數量</p>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-3">
                    <div class="stat-item">
                        <h3 class="display-6 text-warning fw-bold" id="stat-downloads">0</h3>
                        <p class="text-muted mb-0">下載次數</p>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-3">
                    <div class="stat-item">
                        <h3 class="display-6 text-info fw-bold" id="stat-commits">0</h3>
                        <p class="text-muted mb-0">程式碼提交</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        // 簡單的統計數字動畫
        document.addEventListener('DOMContentLoaded', function() {
            const stats = [
                { element: 'stat-users', target: 1250, suffix: '+' },
                { element: 'stat-projects', target: 89, suffix: '' },
                { element: 'stat-downloads', target: 15600, suffix: '+' },
                { element: 'stat-commits', target: 2340, suffix: '+' }
            ];
            
            stats.forEach(stat => {
                animateCounter(stat.element, 0, stat.target, 2000, stat.suffix);
            });
        });
        
        function animateCounter(elementId, start, end, duration, suffix = '') {
            const element = document.getElementById(elementId);
            const startTime = performance.now();
            
            function updateCounter(currentTime) {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);
                
                // 使用 easeOutCubic 緩動函數
                const easeProgress = 1 - Math.pow(1 - progress, 3);
                const current = Math.round(start + (end - start) * easeProgress);
                
                element.textContent = current.toLocaleString() + suffix;
                
                if (progress < 1) {
                    requestAnimationFrame(updateCounter);
                }
            }
            
            requestAnimationFrame(updateCounter);
        }
    </script>
}
